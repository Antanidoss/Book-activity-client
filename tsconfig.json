{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
			"query": ["./query"],
      "query/*": ["./query/*"],
      "api": ["./api"],
      "api/*": ["./api/*"],
      "reduxStore": ["./redux"],
      "reduxStore/*": ["./redux/*"],
      "common": ["./common"],
      "common/*": ["./common/*"],
      "commonComponents": ["./components/common"],
      "commonComponents/*": ["./components/common/*"]
		}
  },
  "include": [
    "src"
  ]
}
